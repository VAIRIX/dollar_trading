<div class="col-lg-12">
  <div>
    <h1 id="tables" class="text-center">Cotización Actual</h1>
  </div>
  <div class="bs-example table-responsive">
    <table class="table table-striped table-bordered table-hover tablesorter">
      <thead>
        <tr>
          <th colspan=3></th>
          <th colspan=3 class="text-center">Ultima cotización</th>
          <th></th>
        </tr>
        <tr>
          <th>Empresa</th>
          <th>Fecha</th>
          <th>Moneda</th>
          <th>Compra</th>
          <th>Venta</th>
          <th>Promedio</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| -%>
          <tr>
            <td><%= link_to company.name, company.url, {target: "_blank"} %></td>
            <td><%= company.obtaining_last_exchange.try(&:updated_at)%></td>
            <td><%= company.obtaining_last_exchange.try(&:currency)%></td>
            <td><%= company.obtaining_last_exchange.try(&:purchase)%></td>
            <td><%= company.obtaining_last_exchange.try(&:sale)%></td>
            <td><%= company.obtaining_last_exchange.try(&:average)%></td>
            <td><%= link_to "Historial", hisotry_exchange_rate_path(company)%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>